<workunit extends="com/rameses/seti2/templates/CrudForm.xml" 
          schemaName="cemetery_section" 
          allowCreate="#{caller.entity.state != 'INACTIVE'}"
          allowEdit="#{entity.state == 'DRAFT'}"
>
    <invokers>
        <invoker type="cemetery_section:create" caption="Cemetery Section (New)" 
                 action="create"  
                 role="MASTER"
                 target="popup"
        />
        <invoker type="cemetery_section:open" caption="Cemetery Section" 
                 action="open"  
                 role="MASTER"
                 target="popup"
        />
        
        <invoker type="formActions" 
            action="approve"
            caption="Approve"
            visibleWhen="#{entity.state == 'DRAFT' &amp;&amp; mode == 'read' &amp;&amp; caller.entity.state != 'DRAFT'}"
        />
        
        <invoker type="formActions" 
            action="deactivate"
            caption="Deactivate"
            visibleWhen="#{entity.state == 'ACTIVE' &amp;&amp; mode == 'read' &amp;&amp; caller.entity.state != 'DRAFT'}"
        />
        
    </invokers>
    <code class="comis.models.CemeterySectionModel" />
    <pages>
        <page template="comis.views.CemeterySectionPage" />
    </pages>
</workunit>