<workunit extends="com/rameses/seti2/templates/CrudForm.xml" 
          schemaName="cemetery_block" 
          allowCreate="#{entity.allowcreate}"
          allowEdit="#{entity.state == 'DRAFT'}"
>
    <invokers>
        <invoker type="cemetery_block:create" caption="Cemetery Block (New)" 
                 action="create"  
                 role="MASTER"
                 target="popup"
        />
        <invoker type="cemetery_block:open" caption="Cemetery Block" 
                 action="open"  
                 role="MASTER"
                 target="popup"
        />
        
        <invoker type="formActions" 
            action="approve"
            caption="Approve"
            visibleWhen="#{entity.state == 'DRAFT' &amp;&amp; mode == 'read' &amp;&amp; caller.cemetery.state != 'DRAFT'}"
        />
        
        <invoker type="formActions" 
            action="deactivate"
            caption="Deactivate"
            visibleWhen="#{entity.state == 'ACTIVE' &amp;&amp; mode == 'read' &amp;&amp; caller.cemetery.state != 'DRAFT'}"
        />
        
    </invokers>
    <code class="comis.models.CemeteryBlockModel" />
    <pages>
        <page template="comis.views.CemeteryBlockPage" />
    </pages>
</workunit>